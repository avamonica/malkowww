<Window x:Class="malkowww.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:malkowww"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
            <ListView Name="listView" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="400" Margin="10,10,0,0" />

            <Button Name="AddButton" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,220,0,0" Click="AddButton_Click" />

            <Button Name="DelButton" Content="Del" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="100,220,0,0" Click="DelButton_Click" />

            <Button Name="ClearButton" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="190,220,0,0" Click="ClearButton_Click" />
        </Grid>
    </Window>